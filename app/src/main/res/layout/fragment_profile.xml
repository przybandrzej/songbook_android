<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.fragments.ProfileFragment"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:scaleType="fitXY"
        android:contentDescription="@string/nav_header_desc"
        android:layout_marginTop="@dimen/nav_header_vertical_spacing"
        app:srcCompat="@mipmap/ic_launcher_round"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="role"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="20sp"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="username"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintTop_toBottomOf="@+id/role"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="28sp"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        app:layout_constraintTop_toBottomOf="@+id/username"
        app:layout_constraintStart_toStartOf="parent"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="28sp"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:layout_constraintStart_toStartOf="parent"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="28sp"/>

    <TextView
        android:id="@+id/reg_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registered"
        app:layout_constraintTop_toBottomOf="@+id/email"
        app:layout_constraintStart_toStartOf="parent"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="28sp"
        />

    <TextView
        android:id="@+id/reg_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="date"
        app:layout_constraintTop_toBottomOf="@+id/email"
        app:layout_constraintStart_toEndOf="@+id/reg_tv"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginStart="12dp"
        android:textSize="28sp"/>

    <TextView
        android:id="@+id/adds_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Added"
        app:layout_constraintTop_toBottomOf="@+id/reg_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="28sp"
        android:layout_marginTop="128dp"/>

    <TextView
        android:id="@+id/adds_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintTop_toBottomOf="@+id/reg_tv"
        app:layout_constraintStart_toEndOf="@+id/adds_tv"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginStart="12dp"
        android:textSize="28sp"
        android:layout_marginTop="128dp"/>

    <TextView
        android:id="@+id/adds_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="songs"
        app:layout_constraintTop_toBottomOf="@+id/reg_tv"
        app:layout_constraintStart_toEndOf="@+id/adds_no"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginStart="12dp"
        android:textSize="28sp"
        android:layout_marginTop="128dp"/>

    <TextView
        android:id="@+id/songs_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edited"
        app:layout_constraintTop_toBottomOf="@+id/adds_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="28sp"/>

    <TextView
        android:id="@+id/songs_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintTop_toBottomOf="@+id/adds_tv"
        app:layout_constraintStart_toEndOf="@+id/songs_tv"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginStart="12dp"
        android:textSize="28sp"/>

    <TextView
        android:id="@+id/songs_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="songs"
        app:layout_constraintTop_toBottomOf="@+id/adds_tv"
        app:layout_constraintStart_toEndOf="@+id/songs_no"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginStart="12dp"
        android:textSize="28sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>